@media (max-width: 767px)
	body
		overflow-y visible
	.bienvenida
		top 30%
		h1
			font-size 40px
		h2
			font-size 20px
	.historia-contenido
		h1
			font-size 40px
	
	.opciones-funcion, .intervalos
		h2
			font-size 40px
		

@media (min-width: 768px)
	
	.bienvenida
		top 50%
		h1
			font-size 70px
		h2
			font-size 30px
	.historia-contenido
		h1
			font-size 70px
	
	.opciones-funcion, .intervalos
		h2
			font-size 70px

