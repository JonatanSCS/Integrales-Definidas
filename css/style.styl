body
	overflow-x hidden
	background #34ACAF !important


.welcome-div
	background transparent
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	flex-wrap wrap
	align-content center
	flex-direction column
	
	.bienvenida
		position absolute
		width 105%
		
		text-align center
		h1, h2
			
			font-weight 100

		h1
			color #f35626

		h2

		button
			margin-top 50px
			border-radius 5px
			border none
			margin-right 10px
			padding 5px
			a:hover
				text-decoration none	
	.datos
		float right
		margin-right 20px
		
.historia-div
	background transparent
	position absolute
	width 100%

	top 0
	left 0
	flex-wrap wrap
	align-content center
	flex-direction column
	
	.historia-imagenes
		width 105%
		.newton , .leibniz
			text-align center
			img
				margin-top 10px
				height 237px
				width 190px
	
	.carousel
		.carousel-inner
			.item
				text-align center

				img
					
					height 200px
					display inline
	.historia-contenido
		text-align center
		h1
			
			color #feab3a
			font-weight 100
		p
			padding 7px 35px
			text-align justify
.formulario-div
	background transparent
	position absolute
	width 100%
	top 0
	left 0
	flex-wrap wrap
	align-content center
	flex-direction column
	.imagen-integral
		padding-top 15px
		padding-left 20px
		img
			width 100px
		label
			position absolute
			font-size 22px
			color black
			font-weight 300
		.label-a
			top 175px
			left 40px
		.label-b
			left 110px
		.label-funcion
			top 100px
			font-size 40px
		.label-dx
			font-size 40px
			top 100px
			left 250px
	
		
	.opciones-funcion
		margin-top 20px
		text-align center
		
		h2
			color #f35626
			font-weight 100
		.opcion-funcion
			margin-top 10px
			
			button
				border-radius 5px
				border none
				background white
				width 100px
				padding 5px
			button:hover
				text-decoration underline
				color #f35626
		
	.intervalos
		text-align center
		margin-top 20px
		margin-bottom 100px
		h2
			color #f35626
			font-weight 100
		.intervalo-a, .intervalo-b, .numero-trapecios
			margin-top 15px
			label
				font-size 25px
				margin-right 15px
			button
				background lightgray
				border 1px solid gray
				margin-right 10px
				width 25px
			input
				margin-right 10px
				text-align center
		.calcular
			margin-top 20px
			button
				border none
				padding 10px
				background white
				border-radius 5px
			button:hover
				border 1px solid #f35626


.resultado-div
	background transparent
	position absolute
	width 100%
	top 0
	left 0
	flex-wrap wrap
	align-content center
	flex-direction column
	font-size 30px
	text-align center
	.row
		margin-bottom 65px

	.imagen-integral
		padding-top 15px
		padding-left 20px
		text-align left
		img
			width 100px
		label
			position absolute
			font-size 22px
			color black
			font-weight 300
		.label-a
			top 175px
			left 40px
		.label-b
			left 110px
		.label-funcion
			top 100px
			font-size 40px
		.label-dx
			font-size 40px
			top 100px
			left 250px
	

	.formula
		span 
			display inline-block
		img
			width	
	.igualdades
		span
			display inline-block
		ul
			list-style none
			display inline-block

		

