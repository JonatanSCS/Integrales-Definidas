body
	overflow-x hidden
	background #34ACAF !important


.welcome-div
	background transparent
	position absolute
	width 100%
	height 100%
	top 0
	left 0
	flex-wrap wrap
	align-content center
	flex-direction column
	
	.bienvenida
		position absolute
		width 105%
		
		text-align center
		h1, h2
			
			font-weight 100

		h1
			color #f35626

		h2

		button
			margin-top 50px
			border-radius 5px
			border none
			a:hover
				text-decoration none	
	.datos
		float right
		margin-right 20px
		
.historia-div
	background transparent
	position absolute
	width 100%

	top 0
	left 0
	flex-wrap wrap
	align-content center
	flex-direction column
	
	.historia-imagenes
		width 105%
		.newton , .leibniz
			text-align center
			img
				height 237px
				width 190px
	
	.carousel
		.carousel-inner
			.item
				text-align center
				img
					height 200px
					display inline
	.historia-contenido
		text-align center
		h1
			
			color #feab3a
			font-weight 100
		p
			padding 30px
			text-align justify
	

