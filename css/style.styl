body
	overflow-x hidden

.welcome-div
	background transparent
	position absolute
	width 100vw
	height 100vh
	top 0
	left 0
	flex-wrap wrap
	align-content center
	flex-direction column
	
	.bienvenida
		position absolute
		width 105vw
		
		text-align center
		h1, h2
			
			font-weight 100

		h1
			color #f35626

		h2

		button
			margin-top 50px
			border-radius 5px
			border none
			a:hover
				text-decoration none	
	.datos
		float right
		margin-right 20px


